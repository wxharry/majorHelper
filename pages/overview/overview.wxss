
/*顶部标签栏*/
.nav {
  font-size: 32rpx;
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 92rpx;
  line-height: 40rpx;
  border-radius: 0px 0px 60rpx 60rpx;
  background-color: rgba(36, 52, 146, 1);
  text-align: center;
  box-shadow: 0px 4rpx 30rpx 0px black;
  /* box-shadow: 2rpx 4rpx 16rpx 0rpx rgba(170, 170, 170, 1); */
  border: 2rpx solid rgba(255, 255, 255, 0);
  z-index: 50;
}
.nav-item {
  height: 118rpx;
  margin: 34rpx 0;
  line-height: 40rpx;
  border-radius: 70rpx 0px 0px 0px;
  color: rgb(84, 97, 212);
  width: 33%;
  display: inline-block;
  text-align: center;
}
.nav-item.active{
    color:white;
}

/*学院专业信息一览表*/
.tab{
  line-height: 40rpx;
  background-color: rgba(36, 52, 146, 1);
  text-align: center;
}

.tab-item {
  height: 118rpx;
  line-height: 40rpx;
  background-color: rgba(250,250, 250, 1);
  width: 33%;
  display:flex;
  flex-direction: column;
  text-align: center;
  
}


/*内容页*/
.tab-box{
  height: 93%;
  background-color: rgba(248, 248, 248, 1);
  margin-top: 80rpx;
  margin-bottom: 170rpx;
}
.tab-content{
  overflow-y: scroll;
  
}

/*content*/
.content{
  display: flex;
  flex-direction: row;
  margin: 90rpx 0;
