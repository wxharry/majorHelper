  border-radius: 0rpx 40rpx 40rpx 0rpx;
  box-shadow: 0rpx 4rpx 24rpx 0rpx rgba(111, 111, 111, 1);
  border: 2rpx solid rgba(255, 255, 255, 0);
  align-items: center;
}
